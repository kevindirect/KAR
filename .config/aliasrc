#!/bin/sh

# utility replacement
alias l="exa -lah --color=auto --group-directories-first" \
	ls="exa -h --color=auto --group-directories-first" \
	grep="rg";

# basic
# TODO - finish  hs/hr history fuzzy match command searching
# It should work by allowing a selection and sending the chosen command to the input prompt as if I typed it
alias f="\$FILE" \
	e="\$EDITOR" \
	v="\$EDITOR" \
	c="clear" \
	i="htop -t" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
	h="history" \
	hg="h | grep" \
	hs="h | fzf --tac --info=inline --header='Search Command' | sed 's/^[0-9]*\s*//g'" \
	hr="xdotool type --delay 0 \"\$(hs)\" && clear" \
	lg="l | grep" \
	mkd="mkdir -pv" \
	manp="man 1p" \
	duse="du -chH | sort -h" \
	lb="lsblk -o MODE,TYPE,HOTPLUG,FSTYPE,FSVER,NAME,MOUNTPOINT,LABEL,STATE,FSUSE%,FSUSED,FSSIZE,SIZE,MODEL,PARTUUID" \
	sdn="sudo shutdown -h now" \
	lap="ps -u" \
	kap="killall" \
	mimetype="file --mime-type" \
	xdgtype="xdg-mime query filetype" \
	xdgdefault="xdg-mime query default" \
	xorgfocusinfo="xprop -id \`xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print \$NF}'\`" \
	myip="curl ifconfig.co" \
	watch2="watch -n 2 " \
	lamp="ps -u \`whoami\`" \
	kamp="kap -u \`whoami\`";

# networking
alias lptl="sudo lsof -i -P -n | grep LISTEN";

# git
alias g="git" \
	gd="g diff" \
	gds="gd --staged" \
	gdh="gd HEAD" \
	gst="g status" \
	gss="gst -sb" \
	gl="g pull" \
	gp="g push" \
	gulp="g submodule foreach git pull origin master" \
	ga="g add" \
	gr="g remote" \
	grm="g rm" \
	gcmsg="g commit -m" \
	gua="gr | xargs -L1 git push --all" \
	glp="gl && gp";

# yay / pacman / misc. arch
alias y="yay" \
	yg="y -Qs | grep" \
	yq="y -Qi" \
	yps="y -Ps" \
	yys="y -Syu" \
	yysp="y -Syu && poweroff" \
	yysr="y -Syu && reboot" \
	yyf="y -Syyu" \
	yrm="y -Rsn" \
	yls="y -Ql" \
	ycl="y -Yc && paccache -r" \
	lsp="pacman -Qett --color=always | less" \
	pacwhen="expac --timefmt='%Y-%m-%d %T' '%l\t%n' | sort" \
	ifck="informant check" \
	ifls="informant list" \
	ifrd="informant read" \
	lsfont="fc-list" \
	lsfontfam="lsfont : family";

# other package managers
alias cg="conda list | grep" \
	car="conda activate" \
	cdr="conda deactivate" \
	cup="conda update conda pip" \
	cua="conda update --all" \
	ccl="conda clean --yes --all";

# trash-cli
alias tdd="trash-put" \
	tls="trash-list | \$PAGER" \
	tre="trash-restore" \
	tem="trash-empty";

# program aliases
alias mpv="mpv --input-ipc-server=/tmp/mpvsoc\$(date +%s)" \
	x="sxiv -ft *" \
	s="\$HOME/.local/bin/uitools/lspaths | fzf --reverse --info=inline --preview='pistol {}'" \
	se="s --header='Edit File' | xargs -r \"\$EDITOR\"" \
	ytd="youtube-dl --add-metadata -i -o '\$HOME/Downloads/%(upload_date)s-%(title)s.%(ext)s'" \
	ytda="youtube-dl --add-metadata -i -x -f 'bestaudio/best' -o '\$HOME/Music/%(upload_date)s-%(title)s.%(ext)s'" \
	ref="shortcuts >/dev/null; source ~/.config/shortcutrc" \
	ffmpeg="ffmpeg -hide_banner" \
	dt="dust" \
	dt3="dt -d 3" \
	grex="grex -r" \
	appsync="rsync -avxP" \
	mirsync="rsync -avxP --delete" \
	shck="shellcheck" \
	vd="vidir" \
	pwi="sudo powertop" \
	nv="nvidia-smi" \
	nvw="watch2 nv" \
	nvi="nvtop" \
	jup="jupyter notebook --ip=127.0.0.1 --port=8888";

# combo aliases
alias cl="ycl && ccl"; # Clear all caches


command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d" # Alias neovim as vim if present.
sd() {
	RES="$(s --header='Search Directory')";
	FILEPATH=$([ -d "$RES" ] && echo "$RES" || dirname "$RES");
	cd "$FILEPATH" || return;
}
so() {
	s --header='Open File' | xargs -r "$OPENER"; # TODO - get this to open files with vim in the same terminal window
}
sg() {
	RES="$(s --header='Grep File')";
	grep "$1" "$RES";
}
trm() {
	TO_REMOVE=$(trash-list | fzf --reverse --info=inline --header='Delete File' | awk '{print $NF}');
	trash-rm "$TO_REMOVE";
}
#vf() {
#	fzf | xargs -r -I % $EDITOR % ;
#}
ifi() {
	CHOSEN=$(ifls | fzf | sed 's/:.*//');
	ifrd "$CHOSEN";
}

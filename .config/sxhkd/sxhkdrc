# sexy hotkey daemon runtime config.
#
# Unbound hotkeys:
# 0th row: F1 F2 F6 F7 F9
# 1st row: W  E  P
# 2nd row: A  D
# 3rd row: zZ C
# Insert Scroll_Lock XF86Launch1


# ********** Programs **********
# Terminal at $HOME ($TERMINAL env variable is the symlink /usr/bin/terminal)
super + Return
	$TERMINAL

# Terminal at the same directory as focused window
super + shift + Return
	"$HOME/.local/bin/termtools/samedir"

# Rofi run mode
super + r
	rofi -modi combi -combi-modi drun,run -show combi

# Rofi window mode
super + w
	rofi -show window

# Rofi ssh
super + shift + s
	rofi -show ssh

# File manager ($FILE env variable)
super + f
	$TERMINAL -e $FILE

# Web browser ($BROWSER env variable)
super + b
	$BROWSER

# Web search
super + s
	"$HOME"/.local/bin/uitools/qb-open -s

# Go to web bookmark
super + g
	"$HOME"/.local/bin/uitools/qb-open -b

# Graphics switching (nvidia<->hybrid)
super + n
	prompt 'switch graphics?' "$HOME"/.local/bin/gfxtools/gfxswitch

# Music (ncmpcpp)
super + m
	$TERMINAL -e ncmpcpp

# Audio (pulsemixer)
super + a
	$TERMINAL -e pulsemixer

# Htop
super + i
	$TERMINAL -e htop

# Toggle transmission torrent daemon
super + F8
	td-toggle

# Torrent (transmission frontend tui)
super + t
	$TERMINAL -e tremc

# Vimwiki
super + v
	$TERMINAL -e $EDITOR -c 'VimwikiIndex'

# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui

# # dropdown xonsh shell (aka calculator)
# super + c
# 	tdrop --wm='bspwm' -s xonsh
# # dropdown terminal
# super + t
# 	tdrop -s $TERMINAL


# ********** Window Manager (BSPWM) **********
# Close window
super + q
	bspc node -c

# Focus on window in direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Focus on window in direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# Focus on desktop
super + {0-9}
	bspc desktop -f {0-9}

# Cycle through desktops
super + {u,d}
	bspc desktop -f {prev, next}

# Swap window with direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Swap window with direction
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# Send window to desktop/workspace
super + shift + {0-9}
	bspc node -d {0-9}

# Rotate the tree from the current nodes parent
super + shift + {u,d}
	bspc node @parent -C {forward, backward}

# Toggle floating on and off
super + shift + o
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# Flip the tree from the current nodes parent
#super + {h,j,k,l}
#  bspc node @parent -F {vertical,horizontal,horizontal,vertical}

# Toggle fullscreen on and off
super + shift + f
	"$HOME/.local/bin/uitools/bspwmfullscreen"

# Expand a window by moving one of its side outward
#ctrl + alt + {h,j,k,l}
#	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}


# ********** Device Controll **********
# Lock session
super + y
	prompt 'Lock session?' 'mpc pause; pauseallmpv; xsecurelock;'

# Logout session
super + shift + y
	prompt 'Logout computer?' 'bspc quit'

# Reboot computer
super + shift + BackSpace
	prompt 'Reboot computer?' 'sudo -A reboot'

# Shutdown computer
super + shift + x
	prompt 'Shutdown computer?' 'sudo -A shutdown -h now'
# Change display
super + F3
	displayselect

# LUKS unlock and mount a USB drive or Android device
super + F10
	$TERMINAL -e rluksopen && rmount

# Unmount and LUKS lock a USB drive or Android device
super + F11
	rumount && rluksclose

# Mute audio
super + shift + m
	lmc mute

# Mute audio
XF86AudioMute
	lmc mute

# Toggle pause/play audio
super + {_,shift +} p
	lmc {toggle,pause}

# Toggle pause/play audio
XF86AudioPlay
	lmc toggle

# Toggle pause/play audio
XF86AudioStop
	lmc toggle

# Change to next/previous tracks
super + {comma,period}
	lmc {prev,next}

# Change to next/previous tracks
XF86AudioPrev
	lmc prev

# Change to next/previous tracks
XF86AudioNext
	lmc next

# Restart track
super + shift + less
	lmc replay

# Increase volume
super + {equal,plus}
	lmc up {10,25}

# Increase volume
XF86AudioRaiseVolume
	lmc up 10

# Decrease volume
super {_,shift +} + minus
	lmc down {10,25}

# Decrease volume
XF86AudioLowerVolume
	lmc down 10

# Seek foward in song
super + {_,shift +} bracketright
	lmc forward {10,120}

# Seek foward in song
XF86AudioForward
	lmc forward 10

# Seek backward in song
super + {_,shift +} bracketleft
	lmc back {10,120}

# Seek backward in song
XF86AudioRewind
	lmc back 10

# Brightness Up
XF86MonBrightnessDown
	light -U 15

# Brightness Down
XF86MonBrightnessUp
	light -A 15


# ********** Miscellaneous **********
# Show clipboard
super + shift + v
	show-clipboard

# Choose emoji
super + grave
	runicode

# Take screenshot
Print
	maim pic-full-$("$HOME/Pictures/"date '+%y%m%d-%H%M-%S').png

# Pick screenshot type
shift + Print
	maimpick

# Record audio or video
#super + Print
#	dmenurecord

# Kill active recording
#super + Delete
#	dmenurecord kill

# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo systemctl suspend'

# Restart/rescan wifi/eth networks
super + F5
	sudo -A systemctl restart NetworkManager



